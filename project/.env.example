# .env.example - ОБНОВЛЕННЫЙ с настройками безопасности
FLASK_ENV=production
SECRET_KEY=your-very-strong-secret-key-change-this-in-production
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password-min-12-chars

# Пути к файлам данных
CSV_PRODUCTS_PATH=./data/products.csv
CSV_ORDERS_PATH=./data/orders.csv
BACKUP_DIR=./data/backups

# КРИТИЧНО: Ключи для шифрования персональных данных
DATA_ENCRYPTION_KEY=your-master-encryption-password-must-be-very-strong
ENCRYPTION_SALT=your-unique-salt-for-extra-security

# Настройки валюты
CURRENCY=RUB

# Логирование безопасности
SECURITY_LOG_PATH=./logs/security.log
ACCESS_LOG_PATH=./logs/access.log

# Ограничения безопасности
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=30
SESSION_TIMEOUT_MINUTES=60

# Email настройки (опционально)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_TO=orders@yourstore.com

# Telegram webhook (опционально)
TELEGRAM_WEBHOOK_URL=https://api.telegram.org/bot<BOT_TOKEN>/sendMessage?chat_id=<CHAT_ID>